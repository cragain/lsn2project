<% if @post.errors.any? %>
  <div class="alert alert-error">
    <h5>There were some errors</h5>
    <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </ul>
  </div>
<% end %>

<div class= "well">
  <%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <br/>
    <%= f.label :url %>
    <%= f.text_field :url %>
    <br/>
    <%= f.submit "Create Post", class: 'btn btn-success' %>
  <% end %>
</div>