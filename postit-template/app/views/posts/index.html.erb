<%= render 'shared/content_title', title: "All Posts" %>


<% @posts.each do |post| %>
  <div class="row">
    <div class="span8 well">
      <%= render post.categories %>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <h6><%= post.description %></h6>
      <p>
        <span class='quiet'>posted by</span> <%= post.user.username %>  at <%= post.created_at %>
      </p>
      <small>
        <span>
          <%= link_to("#{post.comments.size} comments", post_path(post)) %>
        </span>
      </small>
    </div>
  </div>
<% end %>



